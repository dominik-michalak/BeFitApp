@model BeFitApp.Models.Exercise

@{
    ViewData["Title"] = "Add Exercise";
}

<h1>Add Exercise</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="ExerciseSessionId" class="control-label">Session</label>
                <select asp-for="ExerciseSessionId" class ="form-control" asp-items="ViewBag.ExerciseSessionId"></select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ExerciseTypeId" class="control-label">Exercise Type</label>
                <select asp-for="ExerciseTypeId" class ="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DificultyLevel" class="control-label"></label>
                <input asp-for="DificultyLevel" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="DificultyLevel" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }