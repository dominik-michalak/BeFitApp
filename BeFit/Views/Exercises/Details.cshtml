@model BeFitApp.Models.Exercise

@{
    ViewData["Title"] = "Exercise Details";
}

<h1>Details</h1>
<div>
    <h4>Exercise</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ExerciseTypeNav.ExerciseName)</dd>

        <dt class="col-sm-2">Session</dt>
        <dd class="col-sm-10">@Model.ExerciseSessionNav.StartDateTime.ToString("g")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Sets)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Sets)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Repetitions)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Repetitions)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Weight)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Weight)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DificultyLevel)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DificultyLevel)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>