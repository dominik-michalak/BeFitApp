@model IEnumerable<BeFitApp.Models.ExerciseSession>

@{
    ViewData["Title"] = "My Sessions";
}

<h1>My Training Sessions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Start New Session</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Intensity (1-10)</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDateTime.ToString("g")</td>
                <td>@item.EndDateTime.ToString("g")</td>
                <td>@Html.DisplayFor(modelItem => item.IntensityLevel)</td>
                <td>@(item.IsCompleted ? "Completed" : "In Progress")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>